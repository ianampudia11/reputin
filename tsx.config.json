{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false
  },
  "tsx": {
    "watch": {
      "include": ["server/**/*"],
      "exclude": [
        "node_modules/**/*",
        "dist/**/*",
        "client/**/*",
        "uploads/**/*",
        "public/**/*",
        "*.log",
        "*.env*",
        ".git/**/*"
      ]
    }
  }
}
